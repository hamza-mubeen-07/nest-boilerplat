{
  "name": "nest-js-micorservice-application-boiler-plate",
  "version": "1.0.0",
  "description": "Nest TypeScript based microservice repository.",
  "license": "MIT",
  "author": "jupitor",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "node dist/apps/health-check/src/main.js",
    "start:prod": "concurrently --kill-others \"node dist/apps/auth/src/main.js\" \"node dist/apps/category/src/main.js\" \"node dist/apps/post/src/main.js\" \"node dist/apps/user/src/main.js\"",
    "start:ts": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "debug": "nodemon -L --config nodemon-docker-debug.json",
    "prestart:prod": "rimraf dist && npm run build",
    "build:prod": "rimraf dist && npm run build",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config apps/user/test/jest-e2e.json",
    "migrate:dev": "prisma migrate dev",
    "resetDb": "prisma migrate reset",
    "doc:serve": "npx @compodoc/compodoc -p tsconfig.build.json -s"
  },
  "dependencies": {
    "@google-cloud/secret-manager": "^3.0.0",
    "@nestjs/common": "^7.1.1",
    "@nestjs/core": "^7.1.1",
    "@nestjs/mapped-types": "*",
    "@nestjs/microservices": "^7.1.1",
    "@nestjs/platform-express": "^7.1.1",
    "@nestjs/websockets": "^7.1.1",
    "@prisma/client": "^3.3.0",
    "class-validator": "^0.13.2",
    "cookie-parser": "^1.4.5",
    "dotenv": "^8.6.0",
    "hbs": "^4.1.2",
    "nats": "^2.4.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.5.5",
    "ts-loader": "^9.2.6"
  },
  "devDependencies": {
    "@compodoc/compodoc": "^1.1.16",
    "@nestjs/cli": "^8.1.5",
    "@nestjs/testing": "6.0.5",
    "@types/express": "4.17.6",
    "@types/jest": "25.2.3",
    "@types/node": "^14.0.5",
    "@types/supertest": "2.0.9",
    "concurrently": "^6.4.0",
    "jest": "26.0.1",
    "nodemon": "2.0.4",
    "prettier": "2.0.5",
    "prisma": "3.3.0",
    "supertest": "4.0.2",
    "ts-jest": "^26.4.3",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "tslint": "5.15.0",
    "typescript": "^4.0.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/"
    ]
  },
  "prisma": {
    "seed": "ts-node prisma/seeders/seed.ts"
  }
}
