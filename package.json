{
  "name": "nest-js-micorservice-application-boiler-plate",
  "version": "1.0.0",
  "description": "Nest TypeScript based microservice repository.",
  "license": "MIT",
  "author": "jupitor",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "node dist/apps/health-check/src/main.js",
    "start:prod": "concurrently --kill-others \"node dist/apps/auth/src/main.js\" \"node dist/apps/category/src/main.js\" \"node dist/apps/post/src/main.js\" \"node dist/apps/user/src/main.js\"",
    "start:ts": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "debug": "nodemon -L --config nodemon-docker-debug.json",
    "prestart:prod": "rimraf dist && npm run build",
    "build:prod": "rimraf dist && npm run build",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config apps/user/test/jest-e2e.json",
    "migrate:dev": "prisma migrate dev",
    "resetDb": "prisma migrate reset",
    "doc:serve": "npx @compodoc/compodoc -p tsconfig.build.json -s"
  },
  "dependencies": {
    "@google-cloud/secret-manager": "^3.10.1",
    "@nestjs/axios": "^0.0.3",
    "@nestjs/common": "^8.2.3",
    "@nestjs/core": "^8.2.3",
    "@nestjs/mapped-types": "*",
    "@nestjs/microservices": "^8.2.3",
    "@nestjs/platform-express": "^8.2.3",
    "@nestjs/websockets": "^8.2.3",
    "@prisma/client": "^3.6.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "cookie-parser": "^1.4.6",
    "dotenv": "^10.0.0",
    "hbs": "^4.2.0",
    "nats": "^2.4.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.4.0"
  },
  "devDependencies": {
    "@nestjs/testing": "8.2.3",
    "@types/express": "4.17.13",
    "@types/jest": "27.0.3",
    "@types/node": "^16.11.11",
    "@types/supertest": "2.0.11",
    "jest": "27.4.2",
    "nodemon": "2.0.15",
    "npm-check-updates": "^12.0.2",
    "prettier": "2.5.0",
    "prisma": "3.6.0",
    "supertest": "6.1.6",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.12.0",
    "tslint": "5.20.1",
    "typescript": "^4.5.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/"
    ]
  },
  "prisma": {
    "seed": "ts-node prisma/seeders/seed.ts"
  }
}
